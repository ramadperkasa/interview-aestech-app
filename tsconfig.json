{
  "files": [],
  "include": ["src/**/*.ts*"],
  "exclude": ["node_modules", "dist", "lib"],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "types": ["pinia-plugin-persist", "vite/client"],
    "lib": ["dom", "es2015"],
    "outDir": "./lib/cjs/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es5",
    "moduleResolution": "node"
  }
}
